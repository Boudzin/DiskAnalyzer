<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DiskAnalyzer.ViewModels"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="DiskAnalyzer.MainPage"
             Title="Analyse Disque">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" BackgroundColor="#F0F0F0">
            <VerticalStackLayout>
                <Label Text="{Binding TotalSizeText}" FontAttributes="Bold" FontSize="16"/>
                <Label Text="{Binding FreeSpaceText}" FontSize="14"/>
                <Label Text="{Binding UsedSpaceText}" FontSize="14"/>
            </VerticalStackLayout>
        </Frame>
        <Button Text="Scanner le disque C:" Command="{Binding ScanCommand}" />
        <CollectionView ItemsSource="{Binding Folders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5">
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding SizeDisplay}" FontSize="12"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
